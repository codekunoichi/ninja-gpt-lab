{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cofounder Fit Questions",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "id",
      "category",
      "question",
      "probes",
      "dealbreaker_hint"
    ],
    "additionalProperties": false,
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^[a-z]+_[0-9]{2}$"
      },
      "category": {
        "type": "string",
        "enum": [
          "Mission & Values",
          "Team & Roles",
          "Decision Rights",
          "Customers & Problem",
          "Data & Access",
          "Product & MVP",
          "AI Strategy",
          "Tech & Architecture",
          "Compliance & Security",
          "GTM & Sales",
          "Funding & Runway",
          "Equity & Compensation",
          "Governance & Legal",
          "Culture & Ways of Working",
          "Exit & Failure Planning"
        ]
      },
      "question": {
        "type": "string",
        "minLength": 8
      },
      "probes": {
        "type": "array",
        "minItems": 1,
        "maxItems": 5,
        "items": {
          "type": "string",
          "minLength": 3
        }
      },
      "dealbreaker_hint": {
        "type": "string",
        "minLength": 3
      }
    }
  }
}